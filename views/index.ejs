<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input
            class="block bg-zinc-800 rounded-md px-5 py-2 w-full"
            type="text"
            placeholder="Title goes here"
            name="title"
          />
          <textarea
            class="block bg-zinc-800 rounded-md px-5 py-2 mt-2 resize-none w-full"
            placeholder="Task description"
            name="description"
          ></textarea>
          <input
            class="bg-blue-600 rounded-md px-5 py-2 mt-2"
            type="submit"
            value="Create task"
          />
        </form>
      </div>
      <div class="tasks p-10 text-white flex gap-3 flex-wrap">
        <% if(files.length>0){%> <% files.forEach((val)=>{%>
        <div class=" task min-w-72 px-3 py-4 bg-zinc-800 rounded-md">
          <h1 class="text-3xl tracking-tighter"><%= val %> </h1>
          <div class="flex w-full justify-between items-center">
            <a class="text-blue-500 inline-block mt-3" href="/files/<%= val %>">Read More</a>
            <a class="text-zinc-600 inline-block mt-3" href="/edit/<%= val%>">edit</a>
          </div>
        </div>
        <%}) %> <%} else{%>

        <h3 class="text-zinc-600">no tasks yet.</h3>
        <%} %>
      </div>
    </div>
  </body>
</html>
